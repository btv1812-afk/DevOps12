6.#!/bin/bash

read -p "Enter your senstence: " sentence

read -a words <<< "$sentence"

num_words=${#words[@]}

echo -n "Reversed sentence: "

for ((i=num_words-1; i>=0; i--))
do
        echo -n "${words[i]} "

done
~
7.#!/bin/bash

#script for count the number of lines in a file

filename=$1

if [ -f $filename ] ; then
        lines=$(wc -l < "$filename")
        echo "The file $filename has $lines lines"
 else
         echo "The file doesn't exist"
fi
~
8. #!/bin/bash

#Iterate over array elements using for loop


fruits=("Apple" "Banana" "Orange" "Mango" "Pineapple")

for fruit in "${fruits[@]}"
do

echo $fruit
done
~
9. #!/bin/bash

read -p "Enter the filename: " filename

if [ -f  "$filename" ] ; then
while read line; do
        echo "$line"
done < "$filename"
else
 echo "The file doesn't exist"
fi
~
10.
#!/bin/bash
# Script which watching directory "~/watch"

# Specify the path to directory to watch

dir_to_watch="/home/vboxuser/watch" #or Ñˆ$HOME/watch

# Monitor for new files and process them

inotifywait -m -e create --format '%w%f' "$dir_to_watch" | while read new_file
do

  cat "$new_file"

 backup_file=${new_file}.back

        mv "$new_file" "$backup_file"

        echo "File renamed to: $backup_file"


done
~
10.1. (the path: sudo etc/systemd/system/watch_dir.service:
[Unit]
Description=Watch ~/watch directory for new file

[Service]
ExecStart=/home/vboxuser/watch_dir
Restart=always


[Install]
WantedBy=multi-user.target

#check if it works sudo journalctl -u watch_dir.service -f
