6.#!/bin/bash

echo -n "Enter a sentence: "
read sentence

reversed_sentence=""

for word in $sentence; do
        reversed_sentence="$word $reversed_sentence"
done

echo "$reversed_sentence"
~

7.#!/bin/bash

#script for count the number of lines in a file

filename=$1

if [ -f $filename ] ; then
        lines=$(wc -l < "$filename")
        echo "The file $filename has $lines lines"
 else
         echo "The file doesn't exist"
fi
~
8. #!/bin/bash

#Iterate over array elements using for loop


fruits=("Apple" "Banana" "Orange" "Mango" "Pineapple")

for fruit in "${fruits[@]}"
do

echo $fruit
done
~
9.#!/bin/bash

echo -n "Enter filename: "
read filename

if [ -f  "$filename" ] ; then
        cat "$filename"

else
 echo "The file doesn't exist"
fi

~
10.
#!/bin/bash

mkdir -p ~/watch
while true; do

for file in ~/watch/*; do
if [[ "$file" == *.back ]] ; then
continue
elif [[ -f "$file" ]] ; then
cat "$file"
mv "$file" "$file.back"
fi
done
sleep 5

done
~
10.1. (the path: sudo etc/systemd/system/watch_dir.service:
[Unit]
Description=Watch ~/watch directory for new file

[Service]
Type=simple
ExecStart=/usr/local/bin/watch_dir
Restart=always


[Install]
WantedBy=multi-user.target

#check if it works sudo journalctl -u watch_dir.service -f
